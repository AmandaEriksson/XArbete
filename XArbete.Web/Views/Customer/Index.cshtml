@{
    ViewData["Title"] = "Mina sidor";
}
@model XArbete.Web.Models.Customer
<br />
<br />

<!-- Page Content -->
<div class="container" style="margin-top:100px">

    <div class="row">
        <div class="col-md-12 mb-5">
            <h2>Mina sidor</h2>
            <hr>
            <p>Här kan du granska och ändra dina uppgifter, lägga till/ta bort hundar samt se över dina bokningar.</p>
        </div>

    </div>
    <div class="row">
        <div class="col-md-6 mb-5">
            <h4>Dina uppgifter:</h4>
            <form asp-controller="Customer" asp-action="UpdateInfo" method="post">
                <input type="hidden" value="@Model.CustomerID" asp-for="@Model.CustomerID"/>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" readonly class="form-control" id="email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label for="name">Namn</label>
                    <input type="text" class="form-control" id="name" asp-for="@Model.Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="phone">Telefon</label>
                    <input type="text" class="form-control" id="phone" asp-for="@Model.Number" value="@Model.Number">
                </div>
                <div class="form-group">
                    <label for="password">Lösenord</label>
                    <input type="password" class="form-control" id="password" placeholder="New password">
                </div>
                <button type="submit" class="btn btn-primary">Spara</button>
            </form>
        </div>
        <div class="col-md-6 mb-5">
            <h4>Dina hundar:</h4>
            <ul>
                @foreach (var dog in Repository.Dogs.Where(a => a.CustomerID == @Model.CustomerID))
                {
                    <li>@dog.Name,@dog.Sex, ID: @dog.ID <img src="@dog.Img" /> <a asp-controller="Customer" asp-action="RemoveDog" asp-route-id="@dog.ID"><span class="glyphicon glyphicon-remove"></span></a></li>
                }
            </ul>
            <a href="#" data-toggle="modal" data-target="#addDog" class="list-group-item">Lägg till hund</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 mb-5">
            <h4>Dina bokningar</h4>

            <h5>Träningshall:</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Starttid</th>
                        <th scope="col">Sluttid</th>
                        <th scope="col">Betalad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Repository.TrainingHallBookings.Where(a => a.CustomerID == @Model.CustomerID))
                    {
                        <tr>
                            <th scope="row">@booking.ID</th>
                            <td>@booking.StartTime</td>
                            <td>@booking.EndTime</td>
                            <td>@booking.Payed</td>
                            <td><a><span class="glyphicon glyphicon-remove"></span></a></td>
                        </tr>
                    }


                </tbody>
            </table>

            @* träningshallbokningar *@

            <h5>Hundpensionat:</h5>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Starttid</th>
                        <th scope="col">Sluttid</th>
                        <th scope="col">HundID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Repository.HotelBookings.Where(a => a.CustomerID == @Model.CustomerID))
                    {
                        <tr>
                            <th scope="row">@booking.ID</th>
                            <td>@booking.From</td>
                            <td>@booking.To</td>
                            <td>@booking.DogID</td>
                            <td><a><span class="glyphicon glyphicon-remove"></span></a></td>
                        </tr>
                    }


                </tbody>
            </table>
            @* hundpensionat bokningar *@
        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
@* Modal *@
<div id="addDog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <form asp-controller="Customer" asp-action="AddDog">
                <div class="modal-body">
                    <input class="input-group-text" placeholder="Namn" name="name" />
                    <br />
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="sex" id="sex1" value="male">
                        <label class="form-check-label" for="sex1">Male</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="sex" id="sex2" value="female">
                        <label class="form-check-label" for="sex2">Female</label>
                    </div><br />
                    <div class="form-group">
                        <br />
                        <label for="exampleFormControlFile1">Ladda upp en bild</label>
                        <input type="file" name="img" class="form-control-file" id="exampleFormControlFile1">
                    </div>

                </div>


                <div class="modal-footer">
                    <input type="submit" class="btn btn-default" value="Spara" />
                </div>
            </form>
        </div>
    </div>
</div>