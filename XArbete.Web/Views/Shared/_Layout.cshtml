                                <a asp-controller="User" asp-action="LogOut" class="nav-link">Logga ut</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item" style="float:right">
                                <a href="#" data-toggle="modal" data-target="#login" class="nav-link">Logga in</a>
                                <a href="#" data-toggle="modal" data-target="#register" class="nav-link">Registrera</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        @RenderBody()


        <!-- Footer -->
        <footer class="page-footer font-small mdb-color lighten-3 pt-4">

            <!-- Footer Links -->
