                    <!-- Grid column -->
                    <div class="col-md-4 col-lg-3 mr-auto my-md-4 my-0 mt-4 mb-1">

                        <!-- Content -->
                        <h5 class="font-weight-bold text-uppercase mb-4">My Funny Friends</h5>

                        <ul class="list-unstyled">
                            <li>
                                <p>
                                    <a href="#!">Kenneln</a>
                                </p>
                            </li>
                            <li>
                                <p>
                                    <a href="#!">Hundpensionat</a>
                                </p>
                            </li>
                            <li>
                                <p>
                                    <a href="#!">Träningshall</a>
                                </p>
                            </li>
                            <li>
                                <p>
                                    <a href="#!">Hitta hit</a>
                                </p>
                            </li>
                        </ul>

                    </div>
                    <!-- Grid column -->

                    <hr class="clearfix w-100 d-md-none">

                    <!-- Grid column -->
                    <div class="col-md-2 col-lg-2 mx-auto my-md-4 my-0 mt-4 mb-1">



                    </div>
                    <!-- Grid column -->

                    <hr class="clearfix w-100 d-md-none">

                    <!-- Grid column -->
