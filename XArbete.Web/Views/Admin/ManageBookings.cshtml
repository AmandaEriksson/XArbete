@model XArbete.Web.ViewModels.AdminManageBookingsViewModel
<br />
<br />
<div class="container" style="margin-top:100px">
    <!-- DOG HOTEL BOOKINGS -->

    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Hantera <b>hundpensionat bokningar</b></h2>
                </div>
                <div class="col-sm-6">
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr></tr>
                <tr>
                    <th><h3>Aktuella</h3></th>
                </tr>
            </thead>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>KundID</th>
                    <th>HundID</th>
                    <th>Från</th>
                    <th>Till</th>
                    <th>Meddelande</th>
                    <th>Träning</th>
                    <th>Grooming</th>
                    <th>Extra promenad</th>
                    <th>Summa</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var booking in Model.HotelBookings.Where(a => a.To >= DateTime.Now))
                {
                    <tr>
                        <td>@booking.ID</td>
                        <td>@booking.CustomerID</td>
                        <td>@booking.DogID</td>
                        <td>@booking.From.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@booking.To.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@booking.CustomerMessage</td>
                        <td>@booking.Training</td>
                        <td>@booking.Grooming</td>
                        <td>@booking.ExtraWalk</td>
                        <td>@booking.Price</td>
                        <td>
                            <a href="#deleteHotelBookingModal" class="delete" data-toggle="modal" data-id="@booking.ID"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                        </td>
                    </tr>
                }
            </tbody>
            <thead style="color:grey">
                <tr></tr>
                <tr>
                    <th><h4>Arkiverade</h4></th>
                </tr>
            </thead>
            <thead style="color:grey">
                <tr>
                    <th>ID</th>
                    <th>KundID</th>
                    <th>HundID</th>
                    <th>Från</th>
                    <th>Till</th>
                    <th>Meddelande</th>
                    <th>Träning</th>
                    <th>Grooming</th>
                    <th>Extra promenad</th>
                    <th>Summa</th>
                </tr>
            </thead>
            <tbody style="color:grey">

                @foreach (var booking in Model.HotelBookings.Where(a => a.To < DateTime.Now))
                {
                    <tr>
                        <td>@booking.ID</td>
                        <td>@booking.CustomerID</td>
                        <td>@booking.DogID</td>
                        <td>@booking.From.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@booking.To.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@booking.CustomerMessage</td>
                        <td>@booking.Training</td>
                        <td>@booking.Grooming</td>
                        <td>@booking.ExtraWalk</td>
                        <td>@booking.Price</td>
                        <td>
                            <a href="#deleteHotelBookingModal" class="delete" data-toggle="modal" data-id="@booking.ID"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- TRAINING HALL BOOKINGS -->

    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Hantera <b>träningshall bokningar</b></h2>
                </div>
                <div class="col-sm-6">
                    @*<a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Lägg till ny</span></a>*@
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr></tr>
                <tr>
                    <th><h3>Aktuella</h3></th>
                </tr>
            </thead>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>KundID</th>
                    <th>Från</th>
                    <th>Till</th>
                    <th>Summa</th>
                    <th>Betald</th>
                    <th>Markera som betald</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.TrainingHallBookings.Where(a => a.EndTime >= DateTime.Now))
                {
                    <tr>
                        <td>@booking.ID</td>
                        <td>@booking.CustomerID</td>
                        <td>@booking.StartTime</td>
                        <td>@booking.EndTime</td>
                        <td>@booking.Price</td>
                        <td>@booking.Payed</td>
                        <td>
                            @if (!booking.Payed)
                            {
                                <div class="form-check-inline">
                                    <input class="form-check-input bookingPayed" type="checkbox" value="" data-id="@booking.ID">
                                </div>
                            }
                            else
                            {
                                <div class="form-check-inline">

                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" checked>
                                </div>
                            }
                        </td>
                        <td>
                            <a href="#deleteHallBookingModal" class="delete" data-toggle="modal" data-id="@booking.ID"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>

                        </td>
                    </tr>
                }
            </tbody>
            <thead style="color:grey">
                <tr></tr>
                <tr>
                    <th><h4>Arkiverade</h4></th>
                </tr>
            </thead>
            <thead style="color:grey">
                <tr>
                    <th>ID</th>
                    <th>KundID</th>
                    <th>Från</th>
                    <th>Till</th>
                    <th>Summa</th>
                    <th>Betald</th>
                    <th>Markera som betald</th>

                </tr>
            </thead>
            <tbody style="color:grey">
                @foreach (var booking in Model.TrainingHallBookings.Where(a => a.EndTime < DateTime.Now))
                {
                    <tr>
                        <td>@booking.ID</td>
                        <td>@booking.CustomerID</td>
                        <td>@booking.StartTime</td>
                        <td>@booking.EndTime</td>
                        <td>@booking.Price</td>
                        <td>@booking.Payed</td>
                        <td>
                            @if (!booking.Payed)
                            {
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="checkbox" value="" data-id="@booking.ID" disabled>
                                </div>
                            }
                            else
                            {
                                <div class="form-check-inline">

                                    <input class="form-check-input" type="checkbox" value="" id="defaultCheck2" checked disabled>
                                </div>
                            }
                        </td>
                        <td>
                            <a href="#deleteHallBookingModal" class="delete" data-toggle="modal" data-id="@booking.ID"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--MODALS-->
<!-- Delete training hall booking -->
<div id="deleteHallBookingModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Admin" asp-action="DeleteHallBooking">
                <div class="modal-header">
                    <h4 class="modal-title">Radera bokning</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Är du säker på att du vill radera den här bokningen?</p>
                    <p class="text-warning"><small>Detta kan inte ångras.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </div>
                <input type="hidden" class="deleteThis" name="id" />
            </form>
        </div>
    </div>
</div>

<!-- Delete hotel booking -->
<div id="deleteHotelBookingModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Admin" asp-action="DeleteHotelBooking">
                <div class="modal-header">
                    <h4 class="modal-title">Radera bokning</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Är du säker på att du vill radera den här bokningen?</p>
                    <p class="text-warning"><small>Detta kan inte ångras.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </div>
                <input type="hidden" class="deleteThis" name="id" />
            </form>
        </div>
    </div>
</div>

<!-- Script for modals -->
<script>
    $(document).ready(function () {

        $('a[data-toggle=modal], button[data-toggle=modal]').click(function () {

            var data_id = '';

            if (typeof $(this).data('id') !== 'undefined') {

                data_id = $(this).data('id');
            }

            $('.deleteThis').val(data_id);
        })
    });
</script>


<!-- booking payed confirmation  -->
<script>
    $('.bookingPayed').on('change', function (e) {
        if (e.target.checked) {

            var data_id = '';

            if (typeof $(this).data('id') !== 'undefined') {

                data_id = $(this).data('id');
            }

            $('#PayedBookingId').val(data_id);

            $('#confirmPayedBooking').modal();

        }
    });
</script>

<div id="confirmPayedBooking" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-controller="Admin" asp-action="ConfirmPayment">

                <div class="modal-header">
                    <h5 class="modal-title">Bekräfta betalning</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Är denna bokning betalad?</p>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Spara" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Stäng</button>
                </div>
                <input type="hidden" id="PayedBookingId" name="id" />
            </form>
        </div>
    </div>
</div>
