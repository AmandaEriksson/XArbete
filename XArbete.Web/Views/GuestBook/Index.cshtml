@{
    ViewData["Title"] = "Dog Hotel Page";
}
@model XArbete.Web.ViewModels.GuestBookViewModel
<br />
<br />

<div class="container" style="margin-top:100px">

    <div class="row">
        <div class="col-md-8 mb-5">
            <h2>Gästbok</h2>
            <hr>
            <p> Här kan du skriva en kommentar i våran gästbok </p>
        </div>
        <div class="col-md-4 mb-5"></div>
        </div>
    </div>
        <!-- Page Content -->
        <div class="container">
            <div class="row">
                <div class="col-md-8 mb-5">
                    <form asp-controller="GuestBook" asp-action="NewComment">
                        <div class="form-group">
                            <label for="formGroupExampleInput">Namn</label>
                            <input type="text" class="form-control" asp-for="@Model.Comment.WrittenBy" id="formGroupExampleInput" placeholder="Skriv ditt namn...">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput2">Kommentar</label>
                            <input type="text" class="form-control" asp-for="@Model.Comment.Comment" id="formGroupExampleInput2" placeholder="Skriv din kommentar...">
                        </div>
                        <input type="submit" value="Skicka" />
                    </form>
                </div>
                <div class="col-md-4 mb-5"></div>
            </div>
            <div class="row">
                <div class="col-md-8 mb-5">
                    <ul class="list-group list-group-flush">
                        @foreach (var comment in @Model.Comments.OrderByDescending(a => a.CreatedAt))
                        {
                            <li class="list-group-item">
                                @comment.WrittenBy: <br />
                                @comment.Comment<br />
                                <small>@comment.CreatedAt.ToString()</small>
                            </li>

                        }
                    </ul>
                    <!-- /.row -->
                </div>
                <div class="col-md-4 mb-5"></div>

            </div>
        </div>
        <!-- /.container -->
