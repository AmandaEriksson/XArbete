@model XArbete.Web.Features.Admin.AdminContent.ViewModels.ContentListViewModel
@{
    ViewData["Title"] = "Om raserna";

}
<br />
<br />
<div class="container" style="margin-top:100px">

    <div class="row">
        <div class="col-md-12 mb-5">
            <h2>@ViewData["Title"]</h2>
            <hr>
            <div class="row">
                @foreach (var breed in Model.KennelContents)
                {
                    <div class="col-md-6 mb-5">
                        <div class="card" style="width: 25rem;">
                            <img src="~/img/breeds/@breed.Img" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@breed.Name</h5>
                                <p class="card-text">@breed.Description</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                @foreach (var row in breed.Section)
                                {
                                    <li class="list-group-item"><b>@row.Title</b><br /> @row.Section</li>

                                }
                            </ul>
                            <div class="card-body">
                                <a href="@breed.Link" class="card-link">@breed.LinkDescription</a>
                                @*<a href="#" class="card-link">Another link</a>*@
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->