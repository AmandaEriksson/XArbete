@model XArbete.Web.Features.Kennel.ViewModels.PuppyGroupsViewModel
@{
    ViewData["Title"] = "Våra planerade valpkullar";

}
<br />
<br />

<!-- Page Content -->
<div class="container" style="margin-top:100px;">

    <div class="row">
        <div class="col-md-12 mb-5">
            <h2>@ViewData["Title"]</h2>
            <hr>
            @if (Model.PuppyGroups.Count != 0)
            {
                @foreach (var group in Model.PuppyGroups)
                {
                    <br />
                    <div class="card text-center shadow p-3 mb-5 bg-white rounded">
                        <div class="card-header">
                            <h3> @group.GroupName</h3>
                            <p>
                                @group.Breed
                            </p>
                            <h5>Beräknat födelsedatum: @DateTime.Parse(group.DateOfBirth).ToShortDateString()</h5>
                        </div>
                        <div class="card-body">
                            <div class="card-deck">
                                <div class="card">
                                    <div class="card-header">
                                        <h4>u: @group.Mother.Name </h4>
                                    </div>
                                    <img class="card-img-top" src="~/img/kenneldogs/@group.Mother.Img" alt="Bild på kullens mor">
                                </div>
                                <div class="card ">
                                    <div class="card-header">
                                        <h4>e: @group.Father.Name</h4>
                                    </div>
                                    <img class="card-img-top" src="~/img/kennelpuppies/@group.Father.Img" alt="Bild på kullens far">
                                </div>
                            </div>

                        </div>
                    </div>
                }
            }
            else
            {
                <h3>Inga aktiva valpkullar, kolla in våra <a asp-controller="Kennel" asp-action="PlannedPuppies">planerade</a> kullar.</h3>
            }
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
<style>
    .card-img-top {
        width: 100%;
        height: 30vw;
        object-fit: cover;
    }
</style>