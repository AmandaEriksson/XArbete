@model XArbete.Web.Kennel.ViewModels.KennelContentListViewModel
@{
    ViewData["Title"] = "Att köpa valp";

}
<br />
<br />
<!-- Page Content -->
<div class="container" style="margin-top:100px">

    <div class="row">
        <div class="col-md-12 mb-5">
            <h2>@ViewData["Title"]</h2>
            <hr>
            <div class="row">
                @foreach (var contentRow in Model.KennelContents)
                {
                    <div class="col-md-6 mb-5">
                        <div class="card" style="width: 25rem;">
                            <div class="card-body">
                                <h5 class="card-title">@contentRow.Name</h5>
                                <p class="card-text">@contentRow.Description</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                @foreach (var contentSectionRow in contentRow.Section)
                                {
                                    <li class="list-group-item"><b>@contentSectionRow.Title</b><br /> @contentSectionRow.Section</li>

                                }
                            </ul>
                            <div class="card-body">
                                <a href="@contentRow.Link" class="card-link">@contentRow.LinkDescription</a>
                                @*<a href="#" class="card-link">Another link</a>*@
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->