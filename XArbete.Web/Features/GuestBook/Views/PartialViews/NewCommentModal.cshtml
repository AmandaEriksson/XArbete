@model XArbete.Web.Features.GuestBook.ViewModels.GuestBookViewModel

<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Skriv en kommentar</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form asp-controller="GuestBook" asp-action="NewComment" method="post">
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Comment.WrittenBy"></label>
                    <input type="text" class="form-control" asp-for="@Model.Comment.WrittenBy">
                </div>
                <div class="form-group">
                    <label asp-for="Comment.Comment">Kommentar</label>
                    <textarea cols="5" class="form-control" asp-for="@Model.Comment.Comment"></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <input type="submit" class="btn btn-success" value="Spara">
            </div>
        </form>
    </div>
</div>