@{ 
    ViewData["Title"] = "Bekräfta statusändring";
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form asp-controller="AdminKennel" asp-action="ChangePuppyStatus" data-ajax="true" data-ajax-success="CloseModal()">

            <div class="modal-header">
                <h5 class="modal-title">@ViewData["Title"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Stämmer ändringen om valp status?</p>
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary" value="Spara" />
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Stäng</button>
            </div>
            <input hidden id="puppySoldId" name="id" />
            <input hidden type="text" id="puppyStatus" name="status" />
        </form>
    </div>
</div>
