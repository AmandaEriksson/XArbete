@model XArbete.Web.Kennel.ViewModels.PuppyGroupViewModel
@{ 
    ViewData["Title"] = "Uppdatera kullens födelsedatum";
}
<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">@ViewData["Title"]</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <form id="ChangePuppyGroupBirthForm" asp-action="ChangePuppyGroupStatus">
            <div class="modal-body">
                <label asp-for="DateOfBirth"></label>
                <input class="form-control" placeholder="(obligatoriskt)" id="puppygroupdateofbirth" asp-for="DateOfBirthPicker" autocomplete="off" required />
                <br />
                <br />
            </div>
            <input type="text" hidden asp-for="ID" id="changedPuppyGroupActiveId" />
            <div class="modal-footer">
                <input type="submit" class="btn btn-success" id="changedstatussubmitbtn" value="Spara">
            </div>
        </form>
    </div>
</div>
<script>
        $("#puppygroupdateofbirth").datetimepicker({
        numberOfMonths: 1,
        format: "Y-m-d",
        timepicker: false
    });

</script>