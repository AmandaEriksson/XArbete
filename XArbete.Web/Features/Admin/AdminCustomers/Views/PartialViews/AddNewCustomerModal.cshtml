@model XArbete.Web.Features.User.ViewModels.RegisterViewModel
@{ 
    ViewData["Title"] = "Lägg till admin";
}

<div class="modal-dialog">
    <div class="modal-content">
        <form class="newForm" asp-action="Register">
            <input type="text" hidden asp-for="IsAdmin" value="true" />
            <div class="modal-header">
                <h4 class="modal-title">@ViewData["Title"]</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            @Html.ValidationMessageFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Password)

            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input type="text" class="form-control" asp-for="Name" required>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="email" class="form-control" asp-for="Email" required>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" class="form-control" asp-for="Password" required>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Avbryt">
                <input type="submit" class="btn btn-success" value="Spara">
            </div>
        </form>
    </div>
</div>