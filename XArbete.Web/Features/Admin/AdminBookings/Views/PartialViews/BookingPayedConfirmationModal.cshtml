@{ 
    ViewData["Title"] = "Bekräfta betalning";
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <form id="bookingConfirmPaymentForm">

            <div class="modal-header">
                <h5 class="modal-title">@ViewData["Title"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Är denna bokning betalad?</p>
            </div>
            <div class="modal-footer">
                <i class="loadingIcon"></i>
                <input type="submit" class="btn btn-primary" value="Spara" />
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Stäng</button>
            </div>
            <input type="hidden" id="PayedBookingId" name="id" />
        </form>
    </div>
</div>