@model List<XArbete.Web.DogHotel.ViewModels.HotelBookingViewModel>
    <div >
        <table class="table table-striped table-hover">
            @if (Model.Count == 0)
            {
                <thead>
                    <tr></tr>
                    <tr>
                        <th><h5>Inga bokningar att visa</h5></th>
                    </tr>
                </thead>
            }
            else
            {
                <thead>
                    <tr>
                        <th>Bokningsnummer</th>
                        <th>HundID</th>
                        <th>Från</th>
                        <th>Till</th>
                        <th>Meddelande</th>
                        <th>Träning</th>
                        <th>Grooming</th>
                        <th>Extra promenad</th>
                        <th>Summa</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var booking in Model.Where(a => DateTime.Parse(a.To) >= DateTime.Now))
                    {
                        <tr>
                            <td>@booking.ID</td>
                            <td>@booking.DogID</td>
                            <td>@DateTime.Parse(booking.From).ToString("g")</td>
                            <td>@DateTime.Parse(booking.To).ToString("g")</td>
                            <td>@booking.CustomerMessage</td>
                            <td>@(booking.Training ? "Ja" : "Nej")</td>
                            <td>@(booking.Grooming ? "Ja" : "Nej")</td>
                            <td>@(booking.ExtraWalk ? "Ja" : "Nej")</td>
                            <td>@booking.Price</td>
                            <td>
                                <a href="#deleteHotelBooking" data-toggle="modal" data-id="@booking.ID" class="btn btn-warning">Avboka</a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>
    </div>