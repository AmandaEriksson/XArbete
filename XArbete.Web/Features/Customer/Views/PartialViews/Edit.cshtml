@model XArbete.Web.Features.Customer.ViewModels.CustomersAdminViewModel

    <div class="row">
        <form asp-controller="Customer" asp-action="Edit" id="EditCustomerForm">
            <input type="hidden" value="@Model.Customer.ID" asp-for="Customer.ID" />
            <div class="form-group">
                <label asp-for="Customer.Email"></label>
                <input type="email" readonly class="form-control" id="email" value="@Model.Customer.Email" asp-for="Customer.Email">
            </div>
            <div class="form-group">
                <label asp-for="Customer.Name"></label>
                <input type="text" class="form-control" id="name" asp-for="Customer.Name" value="@Model.Customer.Name">
            </div>
            <div class="form-group">
                <label asp-for="Customer.Number"></label>
                <input type="text" class="form-control" id="phone" asp-for="Customer.Number" value="@Model.Customer.Number">
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Spara</button>
        </form>
    </div>