@{
    ViewData["Title"] = "Träningsplan";
}
@model XArbete.Web.Features.Admin.AdminContent.ViewModels.ContentViewModel

<br />
<br />

<!-- Page Content -->
<div class="container" style="margin-top:100px">

    <div class="row">
        <div class="col-md-12 mb-5">
            <h2>@ViewData["Title"]</h2>

            <hr>
            
            <ul>
                @foreach (var sec in Model.Section)
                {
                    if (sec.Title != null)
                    {
                        <li>@sec.Title</li>
                    }
                    <li>@sec.Section</li>

                }
              </ul>
             <a class="btn btn-primary btn-lg" asp-controller="TrainingHall" asp-action="Book">Boka hallen &raquo;</a>
        </div>

    </div>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <img src="~/img/hallen.jpg" class="img-fluid" />
        </div>
        <div class="col-md-4">
            <img src="~/img/hallen2.jpg" class="img-fluid" />

        </div>
        <div class="col-md-4">
            <img src="~/img/hallen3.jpg" class="img-fluid" />
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->